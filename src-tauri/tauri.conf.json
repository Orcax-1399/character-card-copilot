{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "character-card-copilot",
  "version": "0.1.0",
  "identifier": "com.orcax.character-card-copilot",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "pnpm build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "character-card-copilot",
        "width": 800,
        "height": 600
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/copilot-128x128.png",
      "icons/copilot-150x150.png",
      "icons/copilot-284x284.png",
      "icons/copilot-310x310.png",
      "icons/copilot.icns",
      "icons/copilot.ico"
    ]
  }
}
